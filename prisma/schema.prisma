generator client {
  provider = "prisma-client-js"
  output   = "./generated/mongo-client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model GeneralInquiry {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  inquiryType String
  message     String
  answered    Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model PhoneInquiry {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  contact           String
  email             String
  inquiryType       String
  message           String
  consent           Boolean
  additionalConsent Boolean?
  answered          Boolean  @default(false)
  createdAt         DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      Role     @default(MANAGER)
  createdAt DateTime @default(now())
}

enum Role {
  SUPER_ADMIN
  MANAGER
}
